create table Recipe(
    Recipe_ID int not null,
    Recipe_name varchar2(150) not null,
    Cook_Time int not null,
    Meal_Type char(50) not null,
    Spice_Level int not null,
    Difficulty_Level int not null,
    Cook_Type char(50),
    Cuisine_Type varchar2 (100),
    Ingredient_ID int,
    Allergy int,
    Required_Utensil int,
    
    primary key (Recipe_ID),
    foreign key(Cuisine_Type) references Cuisine(Cuisine_Type),
    foreign key(Ingredient_ID) references Ingredients(Ingredient_ID),
    foreign key(Allergy) references Common_Allergies(Allergy_ID),
    foreign key(Required_Utensil) references Utensils(Untensil_ID)
    
);

create table Ingredients(
    Ingredient_ID int not null,
    Ingredient_Name varchar2(100) not null,
    price int,
    Category char(100) not null,
    allergen int,
    
    
    primary key(Ingredient_ID),
    foreign key(allergen) references Common_Allergies(Allergy_ID)
);

create table recipe_ingredients(
    Recipe_ID int not null,
    Ingredient_ID int not null,
    Quantity decimal(10,2),
    Unit varchar2(20),
    
    primary key(Recipe_ID,Ingredient_ID),
    foreign key(Recipe_ID) references Recipe(Recipe_ID),
    foreign key (Ingredient_ID) references Ingredients(Ingredient-ID)
);

create table Utensils(
    Utensil_ID int not null,
    Utensil_name varchar2(150) not null,
    Type char(100) not null,
    Size int,
    Matieral char(100),
    
    primary key(Utensil_ID)
);

create table Recipe_Utensils(
    recipe_ID int not null,
    utensil_id int not null,
    
    primary key(recipe_ID, utensil_ID),
    foreign key(recipe_ID) references Recipe(recipe_ID),
    foreign key (Utensil_ID) references Utensils(Utensil_ID)
);
create table Common_Allergies(
    Allergy_Type varchar2(150) not null,
    Allergy_ID int not null,
    
    primary key(Allergy_ID)
);

create table Recipe_Allergies (
    Recipe_ID int not null,
    Allergy_ID int not null,
    
    primary key (Recipe_ID, Allergy_ID),
    foreign key (Recipe_ID) references Recipe(Recipe_ID),
    foreign key (Allergy_ID) references Common_Allergies(Allergy_ID)
);

create table Ingredient_Allergies (
    Ingredient_ID int not null,
    Allergy_ID int not null,
    
    primary key (Ingredient_ID, Allergy_ID),
    foreign key (Ingredient_ID) references Ingredients(Ingredient_ID),
    foreign key (Allergy_ID) references Common_Allergies(Allergy_ID)
);

create table Cuisine(
    Cuisine_Type varchar2(100),
    Continent varchar2(100),
    primary key (Cuisine_Type),
        foreign key (Continent) references Continent(continent)
);

create table Continent(
    Continent varchar2(100),
    Country varchar2(100)
);